<div class="wrapper-form-edit">
  <div class="container-form-edit">
    <h1 class="text-center">Create a new task</h1>
    <div class="form-div">

      <%= form_for(@task) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_field :details, class: 'form-control' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit class: 'btn btn-primary' %>
      </div>

      <% end %>

    </div>

    <div class="back-to-home-edit">
      <%= link_to "Back to list", tasks_path, class: "btn-back-edit" %>
    </div>
</div>

